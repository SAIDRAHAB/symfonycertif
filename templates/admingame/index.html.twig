{% extends 'base.html.twig' %}

{% block title %}Interface d'ajout de jeu
{% endblock %}


{% block stylesheets %}
	<link href="{{ asset('css/bg1.css') }}" rel="stylesheet"/>
{% endblock %}


{% block body %}
	<div class="container mb-5 mt-5 ">
		<h1 class="text-center mt-5 mb-5 ">Interface d'ajout de jeu externe</h1>


		<table class="table table-striped table-primary">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Description</th>
					<th>Url associé</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for upload_game in upload_games %}
					<tr>
						<td>{{ upload_game.id }}</td>
						<td>{{ upload_game.Titre }}</td>
						<td>{{ upload_game.Description }}</td>
						<td>{{ upload_game.url }}</td>
						<td>
							<a href="{{ path('upload_game_show', {'id': upload_game.id}) }}" class="btn btn-success " role="button">Voir</a>
							<a href="{{ path('upload_game_edit', {'id': upload_game.id}) }}" class="btn btn-warning " role="button">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Rien trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('upload_game_new') }}" class="btn btn-light" style=" color: #333 !important" role="button">Creer</a>
	</div>
{% endblock %}
{% block footer %}{% endblock %}
