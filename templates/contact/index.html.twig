{% extends 'base.html.twig' %}

{% block title %}Contacter administrateur
{% endblock %}


{% block stylesheets %}
	<link href="{{ asset('css/contact.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

	<div class="container full-height my-5 py-5">
		{% for message in app.flashes('message') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<div class="example-wrapper">
			<h1 class="text-center m-3 display-3 text-white">Contactez-nous</h1>

			<div class="m-5 text-white">
				{{ form(contact_formulaire) }}


				</div>
			</div>
		</div>
	{% endblock %}

	{% block footer %}{% endblock %}
