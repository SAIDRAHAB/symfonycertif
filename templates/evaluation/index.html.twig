{% extends 'base.html.twig' %}

{% block title %}Suivi
{% endblock %}


{% block stylesheets %}
	<link href="{{ asset('css/home-evaluation.css') }}" rel="stylesheet"/>
{% endblock %}


{% block body %}

	<div class="container full-height mt-5 mb-5 text-white">

		<h1 class="display-3 mb-5">Suivi des patients</h1>
		<table class="table table-striped table-primary">
			<thead class="thead">
				<tr>
					<th>Jeu</th>
					<th>Score</th>
					<th>Patient</th>
					<th>Commentaire de l'orthophoniste</th>
					<th>Date et horaire</th>
				</tr>
			</thead>
			<tbody>
				{% for score in listescore %}
					<tr>
						<td>{{ score.Titre }}</td>
						<td>{{ score.Score }}</td>
						<td>{{ score.patient }}</td>
						<td>{{ score.commentaire }}</td>
						<td>Le
							{{ score.date|date('d/m/Y Ã  H:i:s') }}</td>
					</tr>

				{% else %}
					<tr>
						<td class="text-warning" colspan="6">Vous avez aucun suivi ! ;)
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('suiviajout') }}" class="btn btn-light" style=" color: #333 !important" style=" color: #333 !important" role="button">Ajouter une evaluation</a>


	</div>
{% endblock %}

{% block footer %}{% endblock %}
