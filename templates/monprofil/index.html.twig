{% extends 'base.html.twig' %}

{% block title %}Hello MonprofilController!
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="text-center">Mon Profil</h1>

		<form>
			<div class="form-group row">
				<label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					<input type="text" readonly class="form-control-plaintext" id="staticEmail" placeholder="{{app.user.email}}">
				</div>
			</div>
			<div class="form-group row">
				<label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputPassword" type="text" placeholder="******" disabled>
				</div>
			</div>

			<div class="form-group row">
				<label for="inputPseudo" class="col-sm-2 col-form-label">Pseudo</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputPseudo" type="text" placeholder="{{app.user.Pseudo}}" disabled>
				</div>
			</div>

		</form>
		<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm square" role="button">Modifier mes Informations</a>
		<table class="table clearfix">
			<thead class="thead-light">
				<tr>
					<th>Jeux numero</th>
					<th>Jeu</th>
					<th>Score</th>
				</tr>
			</thead>
			<tbody>
				{% for score in listescore %}
					<tr>

						<td>{{ score.Id }}</td>
						<td>{{ score.Titre }}</td>
						<td>{{ score.Score }}</td>

					</tr>
				{% endfor %}

			</tbody>

		</div>
	</div>
</div>{% endblock %}
