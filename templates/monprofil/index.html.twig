{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur
{% endblock %}


{% block stylesheets %}
	<link href="{{ asset('css/bg1.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

	<div class="container  mb-5">
		<h1 class="text-center mt-5 ">Mon Profil</h1>

		<form>
			<div class="form-group row mt-5">
				<label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
				<div class="col-sm-10">
					<input type="text" readonly class="form-control-plaintext" id="staticEmail" placeholder="{{app.user.email}}">
				</div>
			</div>
			<div class="form-group row mt-5">
				<label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputPassword" type="text" placeholder="******" disabled>
				</div>
			</div>

			<div class="form-group row mt-5">
				<label for="inputPseudo" class="col-sm-2 col-form-label">Pseudo</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputPseudo" type="text" placeholder="{{app.user.Pseudo}}" disabled>
				</div>
			</div>

			<div class="form-group row mt-5">
				<label for="inputPseudo" class="col-sm-2 col-form-label">Numero Adeli</label>
				<div class="col-sm-10">
					<input class="form-control" id="inputPseudo" type="text" placeholder="{{app.user.Numeroadeli}}" disabled>
				</div>
			</div>
		</form>

		<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn mt-5 btn-primary btn-sm square" role="button">Modifier mes Informations</a>

	</div>

{% endblock %}

{% block footer %}{% endblock %}
