{% extends 'base.html.twig' %}

{% block title %}Hello MonprofilController!{% endblock %}

{% block body %}


 <div class="container">
    <h1>Mon Profil</h1>
    
   
<div class="form-group">
    <label class="control-label" for="disabledInput" disabled="true">Email</label>
    <input class="form-control" id="disabledInput" type="text" placeholder="{{app.user.email}}">
</div>

    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="{{app.user.password}}">
    </div>

<div class="form-group">
  <label class="col-form-label" for="inputDefault">Pseudo</label>
  <input type="text" class="form-control" placeholder="{{app.user.Pseudo}}" id="inputDefault">
</div> 


                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm square" role="button">edit</a>
 <table class="table">
 <h2>Score</h2>
        <thead>
            <tr>
                
                <th>Jeux numero</th>
                <th>Titre du jeu</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
        {% for score in listescore %}
            <tr>

                <td>{{ score.Id }}</td>
                <td>{{ score.Titre }}</td>
                <td>{{ score.Score }}</td>
                 
            </tr>
            
        </tbody>
        {% endfor %}

{% endblock %}
