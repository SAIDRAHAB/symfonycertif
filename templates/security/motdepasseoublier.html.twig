									{{form(emailForm)}}
									</fieldset>
									<div class="clearfix"></div>
								</form>

								<div class="clearfix"></div>

							</div>
							<!-- end login -->
							<div class="logo">
								<img src="{{ asset('img/logo_boo2.png') }}" alt="LOGO" width="200" height="200"/>

								<div class="clearfix"></div>
							</div>

						</div>
					</center>
				</div>
			</div>

		{% endblock %}
