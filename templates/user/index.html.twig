{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	{% if is_granted('ROLE_ADMIN') %}

		<div class="container-fluid bg-light">

			<h1 class="text-center mt-5 mb-5 ">Interface Gestion des Users</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Pseudo</th>
						<th>Roles</th>
						<th>Password</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.pseudo }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.password }}</td>
							<td>
								<a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-success btn-sm square" role="button">show</a>
								<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm square" role="button">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a class="btn btn-primary" href="{{ path('user_new') }}">Create new</a>
		</div>

	{% endif %}


{% endblock %}

{% block footer %}{% endblock %}
